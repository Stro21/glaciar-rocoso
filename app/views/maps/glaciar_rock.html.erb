<p id="notice"><%= notice %></p>

<h1>Glaciar Rocks</h1>

<table id="map" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Coordinates</th>
      <th>Elevation</th>
      <th>Temperature</th>
      <th>Zoom</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <% if map.glaciar_rock %>
        <tr id="<%= map.id %>">
          <td><a href="<%= map.url %>"><%= map.name %></a></td>
          <td><%= map.center %></td>
          <td><%= map.elevation %></td>
          <td><%= map.temperature %></td>
          <td><%= map.zoom %></td>
          <td><%= map.user.username %></td>
          <td><%= link_to 'Show', map, class: "btn btn-info" %></td>
          <% if can? :edit, map %>
            <td><%= link_to 'Edit', edit_map_path(map), class: "btn btn-info" %></td>
          <% end %>
          <% if can? :destroy, map %>
            <td><%= link_to 'Destroy', map, method: :delete, data: { remote: true, confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>