<p id="notice"><%= notice %></p>

<h1>My Maps</h1>

<table id="map" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Coordinates</th>
      <th>Elevation</th>
      <th>Temperature</th>
      <th>Zoom</th>
      <th>Glaciar Rock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <% if map.user_id = current_user.id %>
        <tr id="<%= map.id %>">
          <td><a href="<%= map.url %>"><%= map.name %></a></td>
          <td><%= map.center %></td>
          <td><%= map.elevation %></td>
          <td><%= map.temperature %></td>
          <td><%= map.zoom %></td>
          <td><%= map.glaciar_rock %></td>
          <td><%= link_to 'Show', map, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_map_path(map), class: "btn btn-info" %></td>
          <td><%= link_to 'Destroy', map, method: :delete, data: { remote: true, confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>